<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
                version="3.0">

     <persistence-unit name="emf" transaction-type="RESOURCE_LOCAL">
          <!-- Proveedor JPA -->
          <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

          <!-- Entidades -->
          <class>logica.Actividad</class>
          <class>logica.Usuario</class>
          <class>logica.Proveedor</class>
          <class>logica.Turista</class>
          <class>logica.Salida</class>
          <class>logica.Inscripcion</class>

          <properties>
               <!-- Driver (URL/usuario/password se inyectan en runtime por utils.JpaUtil) -->
               <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
               <property name="eclipselink.target-database" value="MySQL"/>

               <!-- Generación automática de esquema en Railway -->
               <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
               <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>

               <!-- Logging moderado en producción -->
               <property name="eclipselink.logging.level" value="WARNING"/>
               <property name="eclipselink.logging.level.sql" value="OFF"/>
          </properties>
     </persistence-unit>

</persistence>