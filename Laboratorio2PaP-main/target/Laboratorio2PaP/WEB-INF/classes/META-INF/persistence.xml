<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
                version="3.0">

     <persistence-unit name="emf" transaction-type="RESOURCE_LOCAL">
          <!-- Usamos JNDI DataSource definido en Tomcat -->
          <non-jta-data-source>java:comp/env/jdbc/railway</non-jta-data-source>
          <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

          <!-- Entidades -->
          <class>logica.Actividad</class>
          <class>logica.Usuario</class>
          <class>logica.Proveedor</class>
          <class>logica.Turista</class>
          <class>logica.Salida</class>
          <class>logica.Inscripcion</class>

          <properties>
               <!-- No incluir credenciales aquí cuando se usa JNDI -->
               <property name="eclipselink.logging.level" value="INFO"/>
               <!-- Desactivar generación de esquema automática por seguridad -->
               <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
          </properties>
     </persistence-unit>

</persistence>